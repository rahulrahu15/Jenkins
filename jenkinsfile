pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git 'https://github.com/your-username/your-repo.git'
      }
    }

    stage('Build') {
      steps {
        sh 'echo "Building project..."'
      }
    }

    stage('Test') {
      steps {
        sh 'echo "Running tests..."'
      }
    }

    stage('Deploy') {
      steps {
        sh '''
          sudo cp -r * /var/www/html/
          echo "Deployment completed"
        '''
      }
    }
  }
}

